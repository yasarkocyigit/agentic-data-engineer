# =============================================================
# Environment Variables for Agentic Data Engineer
# =============================================================
# Copy this file to .env and update the values.
#   cp .env.example .env
# =============================================================

# PostgreSQL (Metadata Store + Source Database)
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE
SOURCE_DB=sourcedb

# Airflow
AIRFLOW_DB_CONN=postgresql+psycopg2://postgres:YOUR_POSTGRES_PASSWORD_HERE@host.docker.internal:5433/controldb
AIRFLOW_FERNET_KEY=GENERATE_WITH_python3_-c_"from_cryptography.fernet_import_Fernet;print(Fernet.generate_key().decode())"
AIRFLOW_SECRET_KEY=GENERATE_A_RANDOM_SECRET_KEY
AIRFLOW_JWT_SECRET=GENERATE_A_RANDOM_JWT_SECRET

# MinIO (S3-Compatible Object Storage)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=YOUR_MINIO_PASSWORD_HERE

# Iceberg Catalog
ICEBERG_CATALOG_URI=jdbc:postgresql://host.docker.internal:5433/controldb

# Gitea (Git Server / CI-CD)
GITEA_URL=http://localhost:3030
GITEA_TOKEN=
